<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/hitam"
        android:text="PILIHLAH PERNYATAAN YANG SESUAI!"/>

    <RadioGroup
        android:id="@+id/rg_slide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp"
        android:padding="20dp">

        <RadioButton
            android:id="@+id/rb_mobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka bekerja dengan mobil"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_teka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka membuat teka-teki"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka bekerja dengan tim"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_hal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka mengatur berbagai hal"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_sesuatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka membangun sesuatu"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_eksperimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka melakukan eksperimen"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_melatih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka melatih orang"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_musik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka membaca tentang seni dan musik"
            android:textSize="15sp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">
    <Button
        android:id="@+id/selanjutnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selanjutnya" />

    </LinearLayout>

</LinearLayout>