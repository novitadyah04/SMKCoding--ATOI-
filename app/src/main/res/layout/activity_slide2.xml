<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/hitam"
        android:text="PILIHLAH PERNYATAAN YANG SESUAI!"/>

    <RadioGroup
        android:id="@+id/rg_slide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp"
        android:padding="20dp">

        <RadioButton
            android:id="@+id/rb_kreatif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya orang yang kreatif"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_memasak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka memasak"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka memperhatikan detail"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_sendiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya ingin mulai bisnis saya sendiri"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_bernyanyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka bernyanyi"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_pengarsipan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka melakukan pengarsipan"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_tanggung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka bertanggung jawab"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rb_menganalisis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya suka menganalisis sesuatu"
            android:textSize="15sp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">
        <Button
            android:id="@+id/selanjutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya" />

    </LinearLayout>

</LinearLayout>